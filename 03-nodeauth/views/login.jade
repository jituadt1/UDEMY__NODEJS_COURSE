extends layout

block content
  h1 Log in
  p Please log in below
  form(method='post', action='/users/login', enctype='application/json')
    .form-group
      label Username
      input.form-control(name='name', type='text')
    .form-group
      label Password
      input.form-control(name='password', type='password')
    input.btn.btn-default(name='submit', type='submit', value='Log in')
